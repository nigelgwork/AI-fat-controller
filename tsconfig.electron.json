{
  "compilerOptions": {
    "target": "ES2022",
    "module": "CommonJS",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "outDir": "dist-electron",
    "rootDir": "electron",
    "declaration": false,
    "sourceMap": true
  },
  "include": ["electron/**/*"],
  "exclude": ["node_modules"]
}
